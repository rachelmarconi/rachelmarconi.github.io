body{
	width: 100%;
	margin: 0 auto;
}

a{
	color: black;
	text-decoration: none;
}

a:hover{
	font-weight: bold;
	color: #3A6905; /*green*/
}

#top{
	width: 100%
}

#banner{
	background-color: #3A6905; /*green*/
	height: 60px;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

#banner-name{
	font-size: 2em;
	color: white;
}

#banner-image{
	width: 50px;
	margin-right: 10px;
}

#banner-image img{
	width: 100%;
	border-radius: 50%;
}

#menu-bar{
	width: 100%;
	background-color: #E2F48B; /*cream*/
	height: 35px;
	display: flex;
	flex-direction: row;
	gap: 5%;
}

.menu-item{
	border-bottom: solid 1px #3A6905; /*green*/
	padding: 7px 15px;
}

#page-body{
	padding-bottom: 70px;
	margin: 50px;
}

#page-flex{
	display: flex;
	flex-direction: row;
}

#body-image{
	flex: 1;
	width: 100%;
	margin: auto 0;
	padding-right: 20px;
}

#body-image img{
	border-radius: 50%;
	max-width: 300px;
}

#body-bio{
	flex: 1;
	width: 100%;
	margin: auto 0;
	padding: 0px 20px;
	border-style: solid;
	border-width: 0px 1px;
	border-color: #3A6905; /*green*/
}

#body-best-links{
	flex: 1;
	width: 100%;
	margin: auto 0;
	padding-left: 20px;
}

.work-sample-box{
	display: inline-block;
	padding: 10px;
	width: 100%;
	border: solid 1px #3A6905; /*green*/
	background-color: #E2F48B; /*cream*/
	margin: 5px 0px;
	text-align: center;
}

.work-container{
	padding-bottom: 70px;
}

.work-head{
	font-size: 2em;
	padding-bottom: 5px;
	margin-bottom: 10px;
	border-bottom: solid 1px #3A6905; /*green*/
}

.work-time{
	display: inline-block;
	font-size: 1.25em;
}

.work-role{
	display: inline-block;
	padding-left: 15px;
	font-size: 1.25em;
}

.work-description{
	padding-top: 20px;
	font-size: 1em;
	padding-bottom: 20px;
}

.work-box{
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	flex-wrap: wrap;
	gap: 20px;
}

.work-item{
	border: solid 1px #3A6905; /*green*/
	padding: 30px;
	background-color: #E2F48B; /*cream*/
	max-width: 250px;
	border-radius: 5px;
}

.work-item-title{
	font-size: 1.5em;
	text-align: center;
}

.work-item-date{
	text-align: center;
	font-size: 1em;
	padding: 10px 0px;
}

.work-extra{
	text-align: center;
	font-size: .75em;
}

#bio-header{
	font-size: 3em;
	text-align: center;
	padding-bottom: 40px;
}

#bio-text{
	margin: 0 10%;
}

#desert-title{
	font-size: 3em;
	text-align: center;
}

#desert-sub-title{
	font-size: 1.5em;
	text-align: center;
	padding-bottom: 40px;
}

.desert-head{
	font-size: 2em;
	padding-top: 40px;
	margin: 10px 10%;
	border-bottom: solid 1px #3A6905; /*green*/
	
}

.desert-text{
	margin: 0 10%;
}

.desert-map{
	margin: 30px 30%;
	text-align: center;
}

#footer{
	background-color: #3A6905; /*green*/
	padding-top: 2px;
	padding-bottom: 1px;
}

#footer p{
	text-align: center;
	color: white;
}

@media only screen and (max-width: 750px){
	.page-body{
		flex-direction: row;
	}
	.body-bio{
		border-width: 0px 1px;
		padding: 0px 20px;
	}
	.body-best-links{
		padding-left: 20px;
		padding-top: 0px;
	}
	.body-image{
		padding-right: 20px;
		padding-bottom: 0px;
	}
	.desert-map{
	margin: 30px 30%;
	text-align: center;
}
}
@media only screen and (max-width: 760px){
	.page-body{
		flex-direction: column;
	}
	.body-bio{
		border-width: 1px 0px;
		padding: 20px 0px;
	}
	.body-best-links{
		padding-top: 20px;
		padding-left: 0px;
	}
	.body-image{
		padding-bottom: 20px;
		padding-right: 0px;
	}
	.desert-map{
		margin: 30px 5%;
		text-align: center;
	}
	
}